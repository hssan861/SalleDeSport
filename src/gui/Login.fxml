<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1100.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="335.0" style="-fx-background-color: #ffffff;" styleClass="root" stylesheets="@../StyleCss/BackgroundClient.css" BorderPane.alignment="CENTER">
            <children>
                <VBox layoutX="234.0" layoutY="234.0" prefHeight="79.0" prefWidth="139.0">
                    <children>
                        <Label text="Email " textFill="#f2bc74">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="10.0" text="Mot de passe" textFill="#f2bc74">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox layoutX="391.0" layoutY="236.0" prefHeight="74.0" prefWidth="193.0">
                    <children>
                        <TextField fx:id="username" prefHeight="3.0" prefWidth="100.0" />
                        <PasswordField fx:id="password" />
                    </children>
                </VBox>
                <Button fx:id="Logiiin" layoutX="342.0" layoutY="351.0" mnemonicParsing="false" onAction="#login" prefHeight="41.0" prefWidth="118.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" styleClass="addbtn" text="S'authentifier" textFill="WHITE" />
                <Button fx:id="reset" layoutX="432.0" layoutY="409.0" mnemonicParsing="false" onAction="#reset" prefHeight="35.0" prefWidth="86.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" styleClass="deletebtn" text="Actualiser" textFill="WHITE" />
                <Button fx:id="CreateAccount" ellipsisString="12" layoutX="484.0" layoutY="351.0" mnemonicParsing="false" onAction="#createAccount" prefHeight="39.0" prefWidth="134.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" styleClass="modifybtn" text="Créer un compte" textFill="WHITE" />
                <CheckBox fx:id="rememberCheckbox" layoutX="405.0" layoutY="313.0" mnemonicParsing="false" prefHeight="15.0" prefWidth="165.0" text="Se souvenir de moi" textFill="WHITE" />
            <Hyperlink layoutX="74.0" layoutY="542.0" onAction="#mdpOublie" text="Mot de passe oublié ? " textFill="#1b95b2" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
