                <TableColumn fx:id="emailColumn" prefWidth="70.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Email" />
                <TableColumn fx:id="ageColumn" prefWidth="102.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Age" />
                <TableColumn fx:id="imageColumn" prefWidth="102.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Image" />
                
                <!-- Add the "Role" column -->
                <TableColumn fx:id="roleColumn" prefWidth="100.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Role" />
            </columns>
        </TableView>
        <Label layoutX="84.0" layoutY="60.0" prefHeight="66.0" prefWidth="444.0" text="Liste des utilisateurs" textAlignment="JUSTIFY" textFill="#e39827">
            <font>
                <Font size="45.0" />
            </font>
        </Label>
      <Button layoutX="639.0" layoutY="460.0" mnemonicParsing="false" style="-fx-background-color: #e39827; -fx-text-fill: white;" text="Voir Réclamations" onAction="#handleVoirReclamationsButtonAction">
    <font>
        <Font name="Berlin Sans FB Bold" size="12.0" />
    </font>
</Button>

    </children>
</AnchorPane>
