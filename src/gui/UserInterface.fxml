<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1100.0" stylesheets="@../StyleCss/BackgroundAdmin.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UserInterfaceController">
    <children>
        <Button fx:id="addUserButton" layoutX="139.0" layoutY="409.0" mnemonicParsing="false" onAction="#handleAjouterButtonAction" prefHeight="34.0" prefWidth="86.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" text="Ajouter" textFill="WHITE" />
        <Button fx:id="modifierButton" layoutX="257.0" layoutY="409.0" mnemonicParsing="false" onAction="#handleModifierButtonAction" prefHeight="34.0" prefWidth="86.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" text="Modifier" textFill="WHITE" />
        <Button fx:id="deleteUserButton" layoutX="365.0" layoutY="409.0" mnemonicParsing="false" onAction="#handleSupprimerButtonAction" prefHeight="34.0" prefWidth="86.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" text="Supprimer" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="refreshButton" layoutX="485.0" layoutY="409.0" mnemonicParsing="false" onAction="#handleRefreshButtonAction" prefHeight="34.0" prefWidth="86.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" text="Actualiser" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="deconnexionButton" layoutX="597.0" layoutY="409.0" mnemonicParsing="false" onAction="#handleDeconnexionButtonAction" prefHeight="34.0" prefWidth="111.0" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" text="Déconnexion" textFill="WHITE" />
        <TextField fx:id="searchField" layoutX="443.0" layoutY="174.0" prefHeight="26.0" prefWidth="169.0" promptText="Filter" />

        <TableView fx:id="usersTable" layoutX="76.0" layoutY="211.0" prefHeight="198.0" prefWidth="710.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;">
            <columns>
                <TableColumn fx:id="nomColumn" prefWidth="118.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Nom" />
                <TableColumn fx:id="prenomColumn" prefWidth="111.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Prénom" />
                <TableColumn fx:id="passwordColumn" prefWidth="107.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Password" />
                <TableColumn fx:id="emailColumn" prefWidth="70.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Email" />
                <TableColumn fx:id="ageColumn" prefWidth="102.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Age" />
                <TableColumn fx:id="imageColumn" prefWidth="102.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Image" />
                
                <!-- Add the "Role" column -->
                <TableColumn fx:id="roleColumn" prefWidth="100.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Role" />
            </columns>
        </TableView>
        <Label layoutX="84.0" layoutY="60.0" prefHeight="66.0" prefWidth="444.0" text="Liste des utilisateurs" textAlignment="JUSTIFY" textFill="WHITE">
            <font>
                <Font size="45.0" />
            </font>
        </Label>
      <Button layoutX="677.0" layoutY="477.0" mnemonicParsing="false" onAction="#handleVoirReclamationsButtonAction" style="-fx-background-color: #1b95b2; -fx-text-fill: white;" text="Voir Réclamations" textFill="WHITE">
    <font>
        <Font name="Berlin Sans FB Bold" size="12.0" />
    </font>
</Button>

    </children>
</AnchorPane>
