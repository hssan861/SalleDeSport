<AnchorPane prefHeight="542.0" prefWidth="1008.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UserInterfaceController">
    <children>
        <Button fx:id="addUserButton" layoutX="91.0" layoutY="375.0" mnemonicParsing="false" onAction="#handleAjouterButtonAction" style="-fx-background-color: #e39827; -fx-text-fill: white;" text="Ajouter">
            <font>
                <Font name="Berlin Sans FB Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="modifierButton" layoutX="186.0" layoutY="375.0" mnemonicParsing="false" onAction="#handleModifierButtonAction" style="-fx-background-color: #e39827; -fx-text-fill: white;" text="Modifier">
            <font>
                <Font name="Berlin Sans FB Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="deleteUserButton" layoutX="281.0" layoutY="375.0" mnemonicParsing="false" onAction="#handleSupprimerButtonAction" style="-fx-background-color: #e39827; -fx-text-fill: white;" text="Supprimer">
            <font>
                <Font name="Berlin Sans FB Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="refreshButton" layoutX="385.0" layoutY="375.0" mnemonicParsing="false" onAction="#handleRefreshButtonAction" prefHeight="24.0" prefWidth="84.0" style="-fx-background-color: #e39827; -fx-text-fill: white;" text="Actualiser">
            <font>
                <Font name="Berlin Sans FB Bold" size="12.0" />
            </font>
        </Button>
        <Button fx:id="deconnexionButton" layoutX="480.0" layoutY="375.0" mnemonicParsing="false" onAction="#handleDeconnexionButtonAction" style="-fx-background-color: #e39827; -fx-text-fill: white;" text="Déconnexion">
    <font>
        <Font name="Berlin Sans FB Bold" size="12.0" />
    </font>
</Button>
        <TextField fx:id="searchField" layoutX="375.0" layoutY="126.0" promptText="Filter" />

        <TableView fx:id="usersTable" layoutX="91.0" layoutY="191.0" prefHeight="181.0" prefWidth="690.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;">
            <columns>
                <TableColumn fx:id="nomColumn" prefWidth="118.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Nom" />
                <TableColumn fx:id="prenomColumn" prefWidth="111.0" style="-fx-border-radius: 30; -fx-background-color: #d6d6d6;" text="Prénom" />
